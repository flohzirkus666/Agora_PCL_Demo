{% extends "base.j2" %}
{% block content %}
<nav class="navbar logo-primary">
    <div class="container-fluid">
        <a class="navbar-brand" href="/index">
            <img src="{{ url_for('static', filename='acme_logo.jpg' ) }}" alt="ACME Labs" width="90" height="90">
        </a>
        <span class="fs-2 text-light">ACME self-service portal</span>
    </div>
</nav>
<div class="container">
    <div class="row mt-3">
        <div id="alert_box" class="alert alert-dismissible fade show visually-hidden" role="alert">
            <strong id="alert_text">Notext</strong>
        </div>
    </div>
    <div class="row mt-3">
        <h3>Order a CIFS Share <span class="badge text-bg-secondary">NEW</span></h1>
    </div>
    <form id="smb_order_form">
        <div class="row">
            <div class="col-3">
                <label for="smb_name" class="form-label">Share name</label>
                <input type="text" class="form-control" id="smb_name" name="smb_name">
            </div>
            <div class="col-3">
                <label for="smb_size" class="form-label">Share size</label>
                <input type="text" class="form-control" id="smb_size" name="smb_size">
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-6">
                <select class="form-select" aria-label="permission selection" id="smb_permission" name="smb_permission">
                    <option selected>Choose permission level</option>
                    <option value="Everyone">Everyone</option>
                    <option value="Authenticated Users">Authenticated Users</option>
                    <option value="Interactive Users">Interactive Users</option>
                </select>
            </div>
        </div>
        <div class="mt-3">
            <input class="form-check-input" type="checkbox" value="sm_enabled" name="snapmirror_enable" id="snapmirror_enable">
            <label class="form-check-label" for="snapmirror_enable">
                I want replication (SnapMirror duh!)
            </label>
        </div>
        <div class="row mt-3">
            <div class="col-3">
                <button class="btn btn-primary" type="submit" id="submitBtn">Make me happy!</button>
            </div>
        </div>
    </form>
</div>
<script src="{{ url_for('static', filename='create_share.js' ) }}"></script>
{% endblock content %}